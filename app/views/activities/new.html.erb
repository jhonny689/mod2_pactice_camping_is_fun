<h1>Create New Activity</h1>
<% if flash[:errors] %>
    <div style="color:red">
        <% flash[:errors].each do |error|%>
            <li><%= error %></li>
        <% end %>
    </div>
    <hr>
<% end %>
<div>
    <%= form_for @activity do |f| %>
        <table>
            <tr>
                <td><%= f.label :name %></td>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <td><%= f.label :difficulty %></td>
                <td><%= f.number_field :difficulty %></td>
            </tr>
            <tr>
                <td></td>
                <td><%= f.submit %></td>
            </tr>
        </table>
    <% end %>
</div>